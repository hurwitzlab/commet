BootStrap: docker
From: ubuntu:latest

%environment
    PATH=/app/commet:$PATH
    LD_LIBRARY_PATH=/usr/local/lib

%runscript
    cd /app/commet
    exec python2.7 Commet.py

%post
    apt-get update
    apt-get install -y gnupg
    apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E084DAB9
    apt-get install -y r-base r-base-dev locales git build-essential python2.7 
        #autoconf libtool \
        #wget curl libcurl4-openssl-dev libssl-dev 
    locale-gen en_US.UTF-8

    cd /usr/bin
    ln -s python2.7 python

    #
    # Put everything into $APP_DIR
    #
    export APP_DIR=/app
    mkdir -p $APP_DIR
    cd $APP_DIR

    #
    # Install Jellyfish 
    #
    cd $APP_DIR
    git clone https://github.com/hurwitzlab/commet-src.git commet
    cd commet
    make 
    make install
    cp heatmap.r dendro.R /usr/local/bin

    #
    # Install R modules (need the .Rprofile to indicate CRAN mirror)
    #
    cat << EOF > .Rprofile
local({
  r = getOption("repos")
  r["CRAN"] = "http://mirrors.nics.utk.edu/cran/"
  options(repos = r)
})
EOF
    Rscript /app/commet/install.r

    # Mount points for TACC directories
    mkdir /home1
    mkdir /scratch
    mkdir /work
